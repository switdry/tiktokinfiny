{
  "name": "tikfinity-clone",
  "version": "3.0.0",
  "description": "Clon de TikFinity - Herramientas completas para TikTok LIVE (Sound Alerts, TTS, Overlays, Goals, Chatbot, Music, Actions)",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.frontend.json",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "build:backend": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "npm run build && nodemon --watch src --exec \"npm run build && node dist/server.js\"",
    "watch": "tsc --watch"
  },
  "keywords": [
    "tiktok",
    "live",
    "comments",
    "tts",
    "text-to-speech",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "tiktok-live-connector": "^0.9.21",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2"
  }
}
